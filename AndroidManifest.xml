<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:maxSdkVersion="18" />

    
    <!-- *****************************  permission  ***************************** -->
    <!-- 在sdcard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读取SDCard数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- *****************************  permission  ***************************** -->


	
    <application
        android:allowBackup="true"
        android:icon="@drawable/kevin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 单元测试 -->
        <uses-library android:name="android.test.runner" />

        
        
    <!-- *****************************  activity  ***************************** -->
        <!-- SharedPreferences 的使用 -->
        <activity android:name="com.pp.sharedpreferences.SharedPreferencesActivity" >
        </activity>

        <!-- Listview 的使用 -->
        <activity android:name="com.pp.listview.ListViewActivity" >
        </activity>
        
        <!-- Parcelable的使用-传递复杂参数  -->
        <activity android:name="com.pp.parcelable.ActivityA" >
        </activity>
        <activity android:name="com.pp.parcelable.ActivityB" >
        </activity>
        
        <!-- Loading框 -->
        <activity android:name="com.pp.loadingDialog.LoadingActivity" >
                        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Toast -->
        <activity android:name="com.pp.toast.ToastActivity" >
                        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- BaseActivity -->
        <activity android:name="com.pp.baseActivity.ActivityA" >
        </activity>
        <activity android:name="com.pp.baseActivity.ActivityB" >
        </activity>
        
        <!-- BaseActivity -->
        <activity android:name="com.pp.dialog.CommDialogActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<!-- *****************************  activity  ***************************** -->
	
	
	
	
	<!-- *****************************  provider  ***************************** -->
        <!-- 内容提供者 -->
        <provider android:name="com.pp.provider.PersonProvider" android:authorities="com.pp.providers.personprovider" >
        </provider>
	<!-- *****************************  provider  ***************************** -->
	
	
	
	
	<!-- *****************************  service  ***************************** -->
	
	<!-- *****************************  service  ***************************** -->
	
	
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="Tests for My App"
        android:targetPackage="com.pp" />

</manifest>