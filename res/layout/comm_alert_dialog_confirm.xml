<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/comm_round_coner_white_bg"
    >

    <!-- 信息类型提示dialog -->
    
    <TextView 
        android:layout_width="@dimen/alert_dialog_width"
        android:layout_height="wrap_content"
    	android:id="@+id/dialogInfoText"
    	android:textSize="@dimen/alert_dialog_text_size"
    	android:layout_margin="@dimen/alert_dialog_margin"
        />
    
    <!-- 文本与按钮分隔线 -->
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_separate_line_height"
        android:background="@android:color/darker_gray"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:layout_weight="2"
        >
	    <!-- 取消按钮 -->
	    <Button
	        android:id="@+id/alert_dialog_cancel"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="@dimen/alert_dialog_btn_height"
	        android:text="@string/alert_dialog_cancel" 
	        android:textSize="@dimen/alert_dialog_btn_size"
	        android:textColor="@color/comm_btn_text_color"
        	android:background="@drawable/comm_button_bg"
	        />
	    
	   <!-- 取消按钮与确认按钮分隔线 -->
    	<View 
        android:layout_width="@dimen/loading_separate_line_width"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        />
	    
	    <!-- 确认按钮 -->
	    <Button
	        android:id="@+id/alert_dialog_confirm_btn"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="@dimen/alert_dialog_btn_height"
	        android:text="@string/alert_dialog_confirm" 
	        android:textSize="@dimen/alert_dialog_btn_size"
	        android:textColor="@color/comm_btn_text_color"
        	android:background="@drawable/comm_button_bg"
	        />
	</LinearLayout>
</LinearLayout>
